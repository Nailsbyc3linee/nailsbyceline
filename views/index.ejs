<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Primary SEO Meta Tags -->
  <title>
    <%= business.pageTitle || business.seo.title %>
  </title>
  <meta name="title" content="<%= business.pageTitle || business.seo.title %>" />
  <meta name="description" content="<%= business.pageDescription || business.seo.description %>" />
  <meta name="keywords" content="<%= business.seo.keywords %>" />
  <link rel="canonical" href="<%= business.canonical || business.seo.canonicalUrl %>" />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="<%= business.ogType || 'business.business' %>" />
  <meta property="og:url" content="<%= business.canonical || business.seo.canonicalUrl %>" />
  <meta property="og:title" content="<%= business.pageTitle || business.seo.title %>" />
  <meta property="og:description" content="<%= business.pageDescription || business.seo.description %>" />
  <meta property="og:image" content="<%= business.seo.image %>" />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:locale" content="en_SE" />
  <meta property="og:site_name" content="<%= business.name %>" />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content="<%= business.canonical || business.seo.canonicalUrl %>" />
  <meta property="twitter:title" content="<%= business.pageTitle || business.seo.title %>" />
  <meta property="twitter:description" content="<%= business.pageDescription || business.seo.description %>" />
  <meta property="twitter:image" content="<%= business.seo.image %>" />

  <!-- Local Business Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "NailSalon",
      "name": "<%= business.name %>",
      "description": "<%= business.seo.description %>",
      "url": "<%= business.seo.canonicalUrl %>",
      "telephone": "<%= business.phone %>",
      "email": "<%= business.email %>",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "<%= business.location.city %>",
        "addressRegion": "<%= business.location.region %>",
        "addressCountry": "<%= business.location.country %>",
        "postalCode": "<%= business.location.postalCode %>"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 56.8777,
        "longitude": 14.8091
      },
      "openingHoursSpecification": [
        <% business.hours.structured.forEach((hour, index) => { %>
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "<%= hour.day %>",
          "opens": "<%= hour.opens %>",
          "closes": "<%= hour.closes %>"
        }<%= index < business.hours.structured.length - 1 ? ',' : '' %>
        <% }) %>
      ],
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "<%= business.reviews.rating %>",
        "reviewCount": "<%= business.reviews.reviewCount %>",
        "bestRating": "<%= business.reviews.bestRating %>",
        "worstRating": "<%= business.reviews.worstRating %>"
      },
      "priceRange": "250-550 SEK",
      "image": "<%= business.seo.image %>",
      "sameAs": [
        "<%= business.socialMedia.instagramUrl %>",
        "<%= business.socialMedia.tiktokUrl %>"
      ],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Nail Care Services",
        "itemListElement": [
          <% business.services.forEach((service, index) => { %>
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "<%= service.name %>",
              "description": "<%= service.description %>"
            },
            "priceSpecification": {
              "@type": "PriceSpecification",
              "price": "<%= service.price %>",
              "priceCurrency": "SEK"
            }
          }<%= index < business.services.length - 1 ? ',' : '' %>
          <% }) %>
        ]
      }
    }
    </script>

  <!-- Service Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ItemList",
      "name": "Nail Care Services",
      "description": "Professional nail care services offered by <%= business.name %>",
      "itemListElement": [
        <% business.services.forEach((service, index) => { %>
        {
          "@type": "ListItem",
          "position": <%= index + 1 %>,
          "item": {
            "@type": "Service",
            "@id": "<%= business.seo.canonicalUrl %>#<%= service.name.toLowerCase().replace(/\s+/g, '-') %>",
            "name": "<%= service.name %>",
            "description": "<%= service.description %>",
            "provider": {
              "@type": "NailSalon",
              "name": "<%= business.name %>"
            },
            "offers": {
              "@type": "Offer",
              "priceRange": "<%= service.price %>",
              "priceCurrency": "SEK"
            }
          }
        }<%= index < business.services.length - 1 ? ',' : '' %>
        <% }) %>
      ]
    }
    </script>

  <!-- Breadcrumb Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "<%= business.seo.canonicalUrl %>"
      }]
    }
    </script>

  <!-- Fonts -->
  <link
    href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap"
    rel="stylesheet" media="swap" />

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">

  <style>
    .hero-gradient {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .nail-gradient {
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .elegant-gradient {
      background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
    }

    .floating {
      animation: floating 3s ease-in-out infinite;
    }

    @keyframes floating {

      0%,
      100% {
        transform: translateY(0px);
      }

      50% {
        transform: translateY(-10px);
      }
    }

    .fade-in {
      animation: fadeIn 1s ease-in;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(30px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .image-placeholder {
      background: linear-gradient(45deg, #f3f4f6, #e5e7eb);
      background-size: 20px 20px;
      background-image: radial-gradient(circle, #d1d5db 1px, transparent 1px);
      display: flex;
      align-items: center;
      justify-content: center;
      color: #9ca3af;
      font-size: 14px;
      text-align: center;
      border: 2px dashed #d1d5db;
      transition: all 0.3s ease;
      overflow: hidden;
    }

    .image-placeholder:hover {
      border-color: #f093fb;
      background: linear-gradient(45deg, #fef7ff, #fce7f3);
    }

    .rounded-inherit {
      border-radius: inherit;
    }

    .service-card {
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .service-card:hover {
      transform: translateY(-8px) scale(1.02);
    }

    .glass-effect {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    img[loading="lazy"] {
      opacity: 0;
      transition: opacity 0.3s;
    }

    img[loading="lazy"].loaded {
      opacity: 1;
    }
  </style>
</head>

<body class="bg-gray-50">
  <!-- Skip to main content for accessibility -->
  <a href="#main-content"
    class="sr-only focus:not-sr-only focus:absolute focus:top-0 focus:left-0 bg-blue-600 text-white p-2 z-50">
    Skip to main content
  </a>

  <!-- Navigation -->
  <nav class="fixed top-0 w-full bg-white/90 backdrop-blur-lg shadow-lg z-50" role="navigation"
    aria-label="Main navigation">
    <div class="container mx-auto px-4 py-3">
      <div class="flex justify-between items-center">
        <div class="flex items-center space-x-2">
          <i class="fas fa-gem text-2xl text-pink-500" aria-hidden="true"></i>
          <span class="text-xl font-bold text-gray-800" style="font-family: 'Playfair Display', serif">
            <%= business.name %>
          </span>
        </div>
        <div class="hidden md:flex space-x-6">
          <a href="#home" class="text-gray-700 hover:text-pink-500 transition-colors"
            aria-label="Go to home section">Home</a>
          <a href="#gallery" class="text-gray-700 hover:text-pink-500 transition-colors"
            aria-label="View our nail art gallery">Gallery</a>
          <a href="#services" class="text-gray-700 hover:text-pink-500 transition-colors"
            aria-label="View our nail care services">Services</a>
          <a href="#contact" class="text-gray-700 hover:text-pink-500 transition-colors"
            aria-label="Contact information and booking">Contact</a>
        </div>
        <a href="tel:<%= business.phone %>"
          class="bg-pink-500 text-white px-4 py-2 rounded-full hover:bg-pink-600 transition-colors"
          aria-label="Call to book appointment">
          <i class="fas fa-phone mr-2" aria-hidden="true"></i>Book Now
        </a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main id="main-content">
    <!-- Hero Section -->
    <section id="home" class="min-h-screen hero-gradient flex items-center justify-center relative overflow-hidden"
      aria-label="Welcome to NailsByCeline">
      <div class="absolute inset-0 opacity-20" aria-hidden="true">
        <div class="absolute top-10 left-10 w-20 h-20 bg-white rounded-full floating"></div>
        <div class="absolute top-1/3 right-20 w-16 h-16 bg-pink-200 rounded-full floating" style="animation-delay: -1s">
        </div>
        <div class="absolute bottom-1/4 left-1/4 w-12 h-12 bg-purple-200 rounded-full floating"
          style="animation-delay: -2s"></div>
      </div>

      <div class="container mx-auto px-4 text-center relative z-10">
        <div class="max-w-4xl mx-auto fade-in">
          <h1 class="text-5xl md:text-7xl font-bold text-white mb-6" style="font-family: 'Playfair Display', serif">
            <%= business.name %>
          </h1>
          <p class="text-xl md:text-2xl text-white/90 mb-8">
            Professional Nail Salon in <%= business.location.city %> - <%= business.tagline %>
          </p>
          <p class="text-lg text-white/80 mb-8">
            Expert nail care services including gel manicures, nail art, and French tips.
            Over <%= business.reviews.reviewCount %> happy clients with <%= business.reviews.rating %>★ average rating.
          </p>
          <div class="flex flex-col md:flex-row gap-4 justify-center items-center mb-12">
            <a href="#services"
              class="bg-white text-purple-700 px-8 py-4 rounded-full font-semibold hover:bg-gray-100 transition-all transform hover:scale-105"
              aria-label="View our nail care services">
              View Services
            </a>
            <a href="mailto:<%= business.email %>"
              class="border-2 border-white text-white px-8 py-4 rounded-full font-semibold hover:bg-white hover:text-purple-700 transition-all transform hover:scale-105"
              aria-label="Contact us via email">
              <i class="fas fa-envelope mr-2" aria-hidden="true"></i>
              <%= business.email %>
            </a>
          </div>

          <!-- Hero Gallery Placeholders -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto" role="img" aria-label="Gallery preview">
            <div class="image-placeholder h-32 rounded-lg glass-effect" data-image-key="hero1"
              data-alt="Professional nail art showcase featuring intricate designs">
              <div class="text-center">
                <i class="fas fa-image text-2xl mb-2" aria-hidden="true"></i>
                <p class="text-xs">Hero Image 1<br />Nail Art Showcase</p>
              </div>
            </div>
            <div class="image-placeholder h-32 rounded-lg glass-effect" data-image-key="hero2"
              data-alt="Manicure process at NailsByCeline salon">
              <div class="text-center">
                <i class="fas fa-image text-2xl mb-2" aria-hidden="true"></i>
                <p class="text-xs">Hero Image 2<br />Manicure Process</p>
              </div>
            </div>
            <div class="image-placeholder h-32 rounded-lg glass-effect" data-image-key="hero3"
              data-alt="Clean and modern nail salon interior in Växjö">
              <div class="text-center">
                <i class="fas fa-image text-2xl mb-2" aria-hidden="true"></i>
                <p class="text-xs">Hero Image 3<br />Studio Interior</p>
              </div>
            </div>
            <div class="image-placeholder h-32 rounded-lg glass-effect" data-image-key="hero4"
              data-alt="Happy client showing beautiful nail results">
              <div class="text-center">
                <i class="fas fa-image text-2xl mb-2" aria-hidden="true"></i>
                <p class="text-xs">Hero Image 4<br />Happy Client</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Gallery Section -->
    <section id="gallery" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4" style="font-family: 'Playfair Display', serif">
            Professional Nail Art Gallery
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Discover our stunning nail art creations from our <%= business.location.city %> salon.
              Each design is carefully crafted with attention to detail and quality.
          </p>
        </div>

        <!-- Featured Gallery Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          <article class="image-placeholder h-80 rounded-xl hover:scale-105 transition-transform"
            data-image-key="featured1"
            data-alt="Elegant French Manicure with Gold Accents - Professional nail art in Växjö">
            <div class="text-center">
              <i class="fas fa-image text-4xl mb-4 text-pink-400" aria-hidden="true"></i>
              <h3 class="text-lg font-semibold mb-2">Featured Work 1</h3>
              <p class="text-sm">Elegant French Manicure<br />with Gold Accents</p>
            </div>
          </article>
          <article class="image-placeholder h-80 rounded-xl hover:scale-105 transition-transform"
            data-image-key="featured2" data-alt="Colorful Nail Art with Geometric Patterns - Custom nail designs">
            <div class="text-center">
              <i class="fas fa-image text-4xl mb-4 text-pink-400" aria-hidden="true"></i>
              <h3 class="text-lg font-semibold mb-2">Featured Work 2</h3>
              <p class="text-sm">Colorful Nail Art<br />Geometric Patterns</p>
            </div>
          </article>
          <article class="image-placeholder h-80 rounded-xl hover:scale-105 transition-transform"
            data-image-key="featured3" data-alt="Acrylic Extensions with Ombre Design - Long lasting nail extensions">
            <div class="text-center">
              <i class="fas fa-image text-4xl mb-4 text-pink-400" aria-hidden="true"></i>
              <h3 class="text-lg font-semibold mb-2">Featured Work 3</h3>
              <p class="text-sm">Acrylic Extensions<br />with Ombre Design</p>
            </div>
          </article>
        </div>

        <!-- Gallery Grid -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4" role="img"
          aria-label="Nail art gallery collection">
          <% for(let i=1; i <=5; i++) { %>
            <div class="image-placeholder h-48 rounded-lg hover:scale-105 transition-transform"
              data-image-key="gallery<%= i %>" data-alt="Professional nail art example <%= i %> from NailsByCeline">
              <div class="text-center">
                <i class="fas fa-image text-2xl mb-2 text-gray-400" aria-hidden="true"></i>
                <p class="text-xs">Gallery <%= i %>
                </p>
              </div>
            </div>
            <% } %>
        </div>

        <!-- Instagram Feed Placeholder -->
        <div class="mt-16 text-center">
          <h3 class="text-2xl font-bold text-gray-800 mb-8">Follow Our Latest Work on Instagram</h3>
          <div class="grid grid-cols-3 md:grid-cols-6 gap-4 max-w-4xl mx-auto">
            <% for(let i=1; i <=6; i++) { %>
              <div class="image-placeholder h-32 rounded-lg hover:scale-105 transition-transform"
                data-image-key="insta<%= i %>" data-alt="Recent Instagram post <%= i %> showing nail art work">
                <div class="text-center">
                  <i class="fab fa-instagram text-xl text-pink-500" aria-hidden="true"></i>
                  <p class="text-xs mt-1">Post <%= i %>
                  </p>
                </div>
              </div>
              <% } %>
          </div>
          <a href="<%= business.socialMedia.instagramUrl %>"
            class="inline-block mt-8 bg-gradient-to-r from-pink-500 to-purple-600 text-white px-8 py-3 rounded-full font-semibold hover:from-pink-600 hover:to-purple-700 transition-all transform hover:scale-105"
            target="_blank" rel="noopener" aria-label="Follow us on Instagram for daily nail art inspiration">
            <i class="fab fa-instagram mr-2" aria-hidden="true"></i>Follow <%= business.socialMedia.instagram %>
          </a>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-20 elegant-gradient">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4" style="font-family: 'Playfair Display', serif">
            Professional Nail Care Services in <%= business.location.city %>
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Expert nail care services tailored to your style and preferences.
            All treatments use premium products and follow strict hygiene standards.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% business.services.forEach((service, index)=> { %>
            <article class="service-card bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl"
              id="<%= service.name.toLowerCase().replace(/\s+/g, '-') %>">
              <div class="image-placeholder h-48 rounded-xl mb-6 hover:scale-105 transition-transform"
                data-image-key="service<%= index + 1 %>"
                data-alt="<%= service.name %> service at NailsByCeline - <%= service.description %>">
                <div class="text-center">
                  <i class="fas fa-hand-sparkles text-3xl mb-3 text-pink-500" aria-hidden="true"></i>
                  <p class="text-sm font-medium">
                    <%= service.name %><br />Service Image
                  </p>
                </div>
              </div>
              <h3 class="text-xl font-bold text-gray-800 mb-3">
                <%= service.name %>
              </h3>
              <p class="text-gray-600 mb-4">
                <%= service.description %>
              </p>
              <div class="mb-4">
                <p class="text-sm text-gray-500 mb-2">
                  <i class="fas fa-clock mr-2" aria-hidden="true"></i>Duration: <%= service.duration %>
                </p>
                <p class="text-sm text-gray-500">
                  <i class="fas fa-tag mr-2" aria-hidden="true"></i>Keywords: <%= service.keywords %>
                </p>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-2xl font-bold text-pink-600">
                  <%= service.price %>
                </span>
                <a href="tel:<%= business.phone %>"
                  class="bg-pink-500 text-white px-6 py-2 rounded-full hover:bg-pink-600 transition-colors"
                  aria-label="Call to book <%= service.name %> appointment">
                  Book Now
                </a>
              </div>
            </article>
            <% }) %>
        </div>

        <!-- Before/After Section -->
        <div class="mt-20">
          <h3 class="text-3xl font-bold text-center text-gray-800 mb-12">Before & After Transformations</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% for(let i=1; i <=3; i++) { %>
              <div class="bg-white rounded-2xl p-6 shadow-lg">
                <div class="grid grid-cols-2 gap-4">
                  <div class="text-center">
                    <h4 class="text-sm font-semibold text-gray-600 mb-2">BEFORE</h4>
                    <div class="image-placeholder h-40 rounded-lg" data-image-key="before<%= i %>"
                      data-alt="Before Transformation <%= i %>">
                      <div class="text-center">
                        <i class="fas fa-image text-xl mb-2"></i>
                        <p class="text-xs">Before <%= i %>
                        </p>
                      </div>
                    </div>
                  </div>
                  <div class="text-center">
                    <h4 class="text-sm font-semibold text-gray-600 mb-2">AFTER</h4>
                    <div class="image-placeholder h-40 rounded-lg" data-image-key="after<%= i %>"
                      data-alt="After Transformation <%= i %>">
                      <div class="text-center">
                        <i class="fas fa-image text-xl mb-2"></i>
                        <p class="text-xs">After <%= i %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
                <p class="text-center text-sm text-gray-600 mt-3">Transformation <%= i %>
                </p>
              </div>
              <% } %>
          </div>
        </div>

        <!-- Local SEO Section -->
        <div class="mt-16 bg-white rounded-2xl p-8 shadow-lg text-center">
          <h3 class="text-2xl font-bold text-gray-800 mb-4">
            <%= business.location.city %>'s Premier Nail Salon
          </h3>
          <p class="text-gray-600 mb-6">
            Conveniently located in <%= business.location.city %>, <%= business.location.region %>, Sweden.
                We serve clients throughout the greater <%= business.location.city %> area with professional
                  nail care services that exceed expectations.
          </p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
            <div>
              <i class="fas fa-map-marker-alt text-3xl text-pink-500 mb-2" aria-hidden="true"></i>
              <h4 class="font-semibold text-gray-800">Location</h4>
              <p class="text-gray-600 text-sm">
                <%= business.location.address %>
              </p>
            </div>
            <div>
              <i class="fas fa-star text-3xl text-yellow-500 mb-2" aria-hidden="true"></i>
              <h4 class="font-semibold text-gray-800">Rating</h4>
              <p class="text-gray-600 text-sm">
                <%= business.reviews.rating %>★ from <%= business.reviews.reviewCount %>+ reviews
              </p>
            </div>
            <div>
              <i class="fas fa-award text-3xl text-purple-500 mb-2" aria-hidden="true"></i>
              <h4 class="font-semibold text-gray-800">Experience</h4>
              <p class="text-gray-600 text-sm">Professional nail technician with years of expertise</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-20 bg-white" aria-label="Customer testimonials">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-800 mb-4" style="font-family: 'Playfair Display', serif">
