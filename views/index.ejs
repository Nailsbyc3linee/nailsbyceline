    // Enhanced Image loading with SEO optimizations
    class SEOImageHandler {
      constructor() {
        this.init();
      }

      init() {
        if (document.readyState === "loading") {
          document.addEventListener("DOMContentLoaded", () => this.setupImages());
        } else {
          this.setupImages();
        }
      }

      setupImages() {
        const placeholders = document.querySelectorAll(".image-placeholder[data-image-key]");
        console.log(`Found ${placeholders.length} image placeholders`);

        placeholders.forEach((placeholder) => {
          const key = placeholder.getAttribute("data-image-key");
          console.log(`Processing image key: ${key}`);

          if (SEO_IMAGE_PATHS[key]) {
            const imagePath = SEO_IMAGE_PATHS[key];
            console.log(`Assigned path for ${key}: ${imagePath}`);
            placeholder.setAttribute("data-image", imagePath);
            this.loadImageWithSEO(placeholder);
          } else {
            console.warn(`No image path found for key: ${key}`);
          }
        });
      }

      loadImageWithSEO(placeholder) {
        const imagePath = placeholder.getAttribute("data-image");
        const altText = placeholder.getAttribute("data-alt") || "Professional nail service image";

        const img = new Image();
        const originalContent = placeholder.innerHTML;

        placeholder.classList.add("loading");
        img.loading = "lazy";

        img.onload = () => {
          this.showImageWithSEO(placeholder, img, altText);
        };

        img.onerror = () => {
          this.showFallback(placeholder, originalContent);
        };

        img.src = imagePath;
        img.alt = altText;
      }

      showImageWithSEO(placeholder, img, altText) {
        placeholder.classList.remove("loading");

        const imageContainer = document.createElement("div");
        imageContainer.className = "absolute inset-0 w-full h-full";

        const imageElement = document.createElement("img");
        imageElement.src = img.src;
        imageElement.alt = altText;
        imageElement.className = "w-full h-full object-cover rounded-inherit";
        imageElement.loading = "lazy";
        imageElement.style.opacity = "0";
        imageElement.style.transition = "opacity 0.3s ease-in-out";

        imageContainer.appendChild(imageElement);
        placeholder.style.position = "relative";
        placeholder.appendChild(imageContainer);

        setTimeout(() => {
          imageElement.style.opacity = "1";
          imageElement.classList.add("loaded");
        }, 50);

        this.addSEOOverlay(placeholder, imageContainer, altText);
      }

      addSEOOverlay(placeholder, imageContainer, altText) {
        placeholder.addEventListener("mouseenter", () => {
          const overlay = document.createElement("div");
          overlay.className = "absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center text-white text-sm opacity-0 transition-opacity duration-300 rounded-inherit";
          overlay.innerHTML = `<div class="text-center p-2"><i class="fas fa-eye text-xl mb-2"></i><br>${altText}</div>`;

          imageContainer.appendChild(overlay);

          setTimeout(() => {
            overlay.style.opacity = "1";
          }, 10);
        });

        placeholder.addEventListener("mouseleave", () => {
          const overlay = imageContainer.querySelector(".bg-black");
          if (overlay) {
            overlay.remove();
          }
        });
      }

      showFallback(placeholder, originalContent) {
        placeholder.classList.remove("loading");
        placeholder.innerHTML = originalContent;
        placeholder.classList.add("image-error");
      }
    }

    // SEO-optimized image paths
    const SEO_IMAGE_PATHS = {
      hero1: "/images/professional-nail-art-showcase-vaxjo.jpg",
